# ============================================
# LUMEN API CONFIGURATION
# Copy file ini menjadi .env dan isi dengan nilai yang benar
# ============================================

# App Settings
APP_NAME=PanggilanGhaibAPI
APP_ENV=production
APP_KEY=base64:GENERATE_RANDOM_32_CHAR_KEY_HERE
APP_DEBUG=false
APP_URL=https://yoursite.com
APP_TIMEZONE=Asia/Makassar

# SECURITY WARNING:
# - APP_DEBUG HARUS false di production
# - APP_KEY harus unik dan rahasia (gunakan: php artisan key:generate)

# Logging
LOG_CHANNEL=stack

# Database - GANTI DENGAN KREDENSIAL HOSTING ANDA
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# SECURITY: API Key untuk autentikasi operasi tulis
# Gunakan key yang panjang dan acak (min 32 karakter)
# Contoh generate: openssl rand -base64 32
API_KEY=GANTI_DENGAN_API_KEY_RAHASIA_MIN_32_KARAKTER

# SECURITY: Domain yang diizinkan untuk CORS
# Pisahkan dengan koma, JANGAN gunakan * di production
# Contoh: http://localhost:3000,https://pa-penajam.go.id
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://pa-penajam.go.id

# Cache Driver (untuk rate limiting)
CACHE_DRIVER=file
